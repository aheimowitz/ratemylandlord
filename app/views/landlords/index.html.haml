
%body    
  #container
    #landlords   
      - if current_user
        =link_to(image_tag("newlandlord.jpg", :class => "new-button"), new_rating_path)
      %table
        %tbody
          %tr
            %th= "Name"
            - Rating.categories.each do |category|
              %th= category.to_s.capitalize
            - if admin?
              %th= "Delete"
          - alter = true;
          - @landlords.each do |landlord|
            - alter = !alter
            %tr{class: alter ? "alt" : nil}
              %td= link_to(landlord.name, landlord_path(:id => landlord.id))
              - landlord.average_ratings.each do |column|
                %td= column
              - if admin?
                /TODO Make dialog Yes/No instead of Ok/Cancel
                %td= link_to image_tag("red-x-icon.png"), landlord_path(landlord.id), :method => :delete, :confirm => "This will delete #{landlord.name} and all ratings associated with this landlord. This cannot be undone."

  %br
  #widget-wrap.group
  %footer.group
