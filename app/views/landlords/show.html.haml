!!!
%html{lang: "en"}
	%head
		%meta{charset: "utf-8"}/
		%link{href: "/assets/landlorddetails.css", rel: "stylesheet"}/
	%body    
		#container
			#name
				=@mylandlord.name
			%br
			#reviewslist
				- Rating.categories.each_with_index do |cat, i|
					#listelem{class: @color_func.call(@avg_reviews[i])}
						#listelemnum
							= @avg_reviews[i]
						= cat.to_s.capitalize
			%br
			%br
			%br
			#reviewtitle
				Reviews about #{@mylandlord.name}
			%br
				#reviewcontainer
					- x=1
					- @reviews.each do |review|
						%table
							%thead
								%tr{class: x.even? ? "greyback" : nil}
									%td#reviewstats
										=review.created_at
										%br
										%br
										#reviewnum
											General:
											- review.general.times do |x|
												%img(src="/assets/bearcat.png")
											- (5 - review.general).times do |x|
												%img(src="/assets/bearcat.png" class="opp")
											%br
											Helpfulness:
											- review.helpfulness.times do |x|
												%img(src="/assets/bearcat.png")
											- (5 - review.helpfulness).times do |x|
												%img(src="/assets/bearcat.png" class="opp")
											%br
											#reviewnum
											Friendliness:
											- review.friendliness.times do |x|
												%img(src="/assets/bearcat.png")
											- (5 - review.friendliness).times do |x|
												%img(src="/assets/bearcat.png" class="opp")
											%br
											#reviewnum
											Availability:
											- review.availability.times do |x|
												%img(src="/assets/bearcat.png")
											- (5 - review.availability).times do |x|
												%img(src="/assets/bearcat.png" class="opp")
											%br
									%td#reviewsum
										#{review.comment} 	
	
									- x = x+1
			#Pagenums
				= link_to '1', landlord_path(:page => 1)
	

					

