!!! 5
%html
  %head
    %title Rate My Landlord
    %meta{charset: "utf-8"}/
    %link{href: "style.css", rel: "stylesheet"}/
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body 
    #header-wrap
      %header.group
        %h2
          %a{href: "/", title: "burstudio"} Rate My Landlord
        #login
          - if flash[:error]
            #error.message= flash[:error]
          -if current_user
            #login_info
              = "Signed in as #{current_user.name}"
              %br
              = link_to 'logout', signout_path(redirect: request.env['PATH_INFO'])
          -else
            -if flash[:loginerror]
              #error.message= flash[:loginerror]
            = link_to "Sign in using bmail", signin_path(redirect: request.env['PATH_INFO']), id: 'sign_in'
        %nav.group
          %ul
            %li.home
              %a{href: "/", title: ""} Home
            %li
              =link_to 'Landlords', landlords_path
            -if admin?
              %li
                =link_to 'Admin', admin_path
            %li.last
              = form_tag landlords_path, method: 'get' do
                %input{name: "search", placeholder: "search", type: "text"}/
                %input.search{type: "submit", value: "go"}/
    / end header wrap
    %br
    =yield

