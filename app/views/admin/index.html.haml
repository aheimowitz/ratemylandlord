%body
  #container
    %table
      %tbody
        %th Name
        %th Email
        %th Remove as Admin
        - alter = true
        - @admins.each do |user|
          / Don't show current user
          - alter = !alter
          %tr{:class => alter ? "alt" : nil}
            %td= user.name
            %td= user.email
            -if user.email != current_user.email
              %td= link_to image_tag("red-x-icon.png"), revoke_admin_path(:id => user.id),:confirm => "Are you sure you want to remove #{user.name} (#{user.email}) as an admin?"
            -else
              %td=''

    %br
    %br
    %br
    
    =form_tag make_admin_path do
      =label_tag :email, "Email:"
      =text_field_tag :email
      =submit_tag "Add"
    /%td= link_to image_tag("check-icon.png"), make_admin_path(:id => user.id)
